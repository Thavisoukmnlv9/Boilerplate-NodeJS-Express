{
  "compilerOptions": {
    "moduleResolution": "NodeNext",
    "skipLibCheck": true,
    "rootDir": "./src",
    "target": "ES2020",
    "module": "NodeNext",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "noImplicitUseStrict": false,
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "paths": {
      "@middleware/*": ["middleware/*"],
      "@api/*": ["api/*"],
      "@utils/*": ["utils/*"],
      "@prisma/*": ["prisma/*"],
      "@routes/*": ["routes/*"]
    }
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}

